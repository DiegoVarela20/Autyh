@model IEnumerable<Blog.Models.Article>

    @{
    ViewData["Title"] = "Blog";

    string? authorEmail = null;
    DateTimeOffset? startDate = null;
    DateTimeOffset? endDate = null;
    }

    <h1>Published Articles</h1>

    <form class="row row-cols-lg-auto g-3 align-items-center" asp-action="Index" method="get">
        <div class="col-12">
            <label class="visually-hidden"
                   asp-for="@startDate">Start date</label>
            <input class="form-control"
                   type="date" asp-for="@startDate" />
        </div>
        <div class="col-12">
            <label class="visually-hidden"
                   asp-for="@endDate">End date</label>
            <input class="form-control"
                   type="date" asp-for="@endDate" />
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Filter</button>
        </div>
    </form>

    <hr />

    @if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
            <tr>
                <td>@article.Title</td>
                <td>@article.AuthorName</td>
                <td>@article.PublishedDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-primary">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No articles found.</p>
}
